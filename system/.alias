
# terminal aliases------------------------------
alias ls='ls -a'
alias c='clear'
alias mv='mv -i'
alias cp='cp -i'
alias ln='ln -i'
alias cat='bat'
alias list= 'brew list | fzf'
alias e='exit'
alias neofetch='neofetch | lolcat'
alias gotoprojects=”cd ~/Workspace/Projects”
alias formatcpp='clang-format -i *.cpp'
alias formath= 'clang-format -i *.h'

# zsh aliases------------------------------
alias config="nvim $HOME/.zshrc"
alias reload="source $HOME/.zshrc"

# hide and show files
alias finders='defaults write com.apple.Finder AppleShowAllFiles TRUE; killAll Finder'
alias finderh='defaults write com.apple.Finder AppleShowAllFiles FALSE; killAll Finder'

# CP TEMPLATE
alias cpptemp="touch makefile main.cpp input.txt output.txt"

# Folders
alias work="$HOME/Workspace"
alias doc="$HOME/Documents"
alias dow="$HOME/Downloads"
alias dot="$HOME/.dotfiles"

# kitty
alias icat="kitty +kitten icat --align=left"
